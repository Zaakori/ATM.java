<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="signUpGridPane" xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.controllers.SignUpController" alignment="center" hgap="10" vgap="10">

    <Label text="We are always happy to see new faces! Sign up here..." GridPane.rowIndex="1"/>
    <Label text="First Name: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Last Name: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="PIN: " GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="pinTextField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button fx:id="signUpButton" text="SIGN UP" GridPane.rowIndex="7" GridPane.columnIndex="0" onAction="#addNewUserAndExitSignUpWindow"/>
    <Button fx:id="goBackButton" text="Go Back" GridPane.rowIndex="7" GridPane.columnIndex="1" onAction="#changeSceneToMainWindow"/>

</GridPane>
