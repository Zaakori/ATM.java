<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:id="mainGridPane" fx:controller="sample.controllers.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Enter full name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Enter PIN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="pinTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button fx:id="signUpButton" text="Sign Up" GridPane.rowIndex="5" GridPane.columnIndex="0" onAction="#changeSceneToSignUpWindow"/>

</GridPane>