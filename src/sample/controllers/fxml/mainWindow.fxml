<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:id="mainGridPane" fx:controller="sample.controllers.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Enter First Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Enter Last Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Enter Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
<!--    <TextField fx:id="passwordTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>-->
    <Button fx:id="signInButton" text="SIGN IN" GridPane.rowIndex="6" GridPane.columnIndex="0" onAction="#signIn"/>
    <Button fx:id="signUpButton" text="Sign Up" GridPane.rowIndex="6" GridPane.columnIndex="1" onAction="#changeSceneToSignUpWindow"/>

</GridPane>