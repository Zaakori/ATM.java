<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane fx:id="transferMoneyGridPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controllers.TransferMoneyController" alignment="CENTER" hgap="10" vgap="10">

    <Label text="Who do you wish to send money to (First Name + Last Name)?" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="whoToSendToTextField" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label text="How much money do you wish to send?" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="sendMoneyTextField" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

    <Button text="SEND MONEY" GridPane.rowIndex="7" GridPane.columnIndex="0" onAction="#transferMoney"/>
    <Button text="EXIT to Profile Page" GridPane.rowIndex="8" GridPane.columnIndex="0" onAction="#changeScene"/>

</GridPane>
